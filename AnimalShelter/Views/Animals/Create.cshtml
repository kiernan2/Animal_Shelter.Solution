@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal;

<h4>Add a new task</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.AnimalName)
  @Html.TextBoxFor(model => model.AnimalName)
  @Html.LabelFor(model => model.Species)
  <select name="species" id="species">
    <option value="cat">Cat</option>
    <option value="dog">Dog</option>
    <option value="bunny">Bunny</option>
  </select>
  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age)
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>